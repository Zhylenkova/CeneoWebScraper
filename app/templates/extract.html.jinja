<div class="header_box">
    <h2 class="text-center header_text">Ekstrakcja opinii</h2>
</div>
    {% if error is defined%}
        <div class="alert alert-secondary" role="alert">
            <strong></strong> {{error}}
            <button type="button" class = "btn-close" data-bs-dismiss = "alert" aria-label="Close"></button>
        </div>
    {% endif %}

    <form action="{{url_for('extract')}}" method = "post" class="form">

